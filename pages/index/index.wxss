/** 
 * 首页整体容器 
 * 设置统一的背景色、全局字体及字号
 */
 page {
  background-color: #f7f7f7; 
  font-size: 14px; 
  color: #333;
  line-height: 1.6;
  min-height: 100vh; 
  padding: 0 20rpx;
}

/**
 * 统一的标题样式
 * 可在多个组件中复用
 */
.title {
  font-size: 36rpx;
  font-weight: bold;
  margin: 40rpx 0 20rpx;
  text-align: center;
  color: #111;
}

/**
 * 卡片容器 
 * 常用于展示一些项目入口、简介等
 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
}

/**
 * 卡片标题
 */
.card-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

/**
 * 卡片描述文本
 */
.card-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
}

/**
 * 公用按钮样式
 * 用于“进入AI对话”等操作
 */
.primary-btn {
  display: inline-block;
  text-align: center;
  background-color: #1677ff;
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
  padding: 16rpx 48rpx;
  border-radius: 8rpx;
  margin: 0 auto;
  /* 若需要在小程序中设置点击态，可使用 hover-class，或在JS中进行控制 */
}

.primary-btn:active {
  opacity: 0.8; /* 点击态简单处理 */
}

/**
 * 底部说明/版权信息
 */
.footer-text {
  font-size: 22rpx;
  color: #999;
  text-align: center;
  margin-top: 40rpx;
  margin-bottom: 16rpx;
}

