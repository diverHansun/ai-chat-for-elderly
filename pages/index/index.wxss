/** 
 * 首页整体容器 
 * 设置统一的背景色、全局字体及字号
 */
 page {
  background-color: #f7f7f7; 
  font-size: 14px; 
  color: #333;
  line-height: 1.6;
  min-height: 100vh; 
  padding: 0 20rpx;
  padding-bottom: 100rpx;  /* 留出 footer 的空间，高度可根据 footer 实际高度调整 */

}

/**
 * 统一的标题样式
 * 可在多个组件中复用
 */
.title {
  font-size: 36rpx;
  font-weight: bold;
  margin: 40rpx 0 20rpx;
  text-align: center;
  color: #111;
}

/**
 * 卡片容器 
 * 常用于展示一些项目入口、简介等
 */
/* 公共卡片样式 */
.card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 26rpx 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.05);
  animation: fadeIn 0.35s ease;
}

/* 卡片标题、描述 */
.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}
.card-desc {
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
  white-space: pre-wrap;
  margin-bottom: 20rpx;
}

/* 按钮公共样式 */
.btn {
  display: inline-block;
  font-size: 28rpx;
  border-radius: 8rpx;
  padding: 14rpx 28rpx;
}

/* 实心按钮 */
.btn-solid {
  background-color: #5fb9ee; /* 可以替换成项目主色 */
  color: #ffffff;
}

/* 描边按钮 */
.btn-outline {
  background-color: transparent;
  border: 1rpx solid #5fb9ee; /* 同上，使用主色 */
  color: #5fb9ee;
}

/* 多按钮组（横向排列，间距） */
.button-group {
  display: flex;
  justify-content: flex-start;
  gap: 24rpx;
}



/*用户注册*/
.dialog-wrapper {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.dialog-box {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  width: 600rpx;
  text-align: center;
}

.dialog-title {
  font-weight: bold;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.dialog-text {
  font-size: 28rpx;
  color: #555;
  margin-bottom: 40rpx;
}

.dialog-buttons {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
}

.btn-cancel {
  background: #f5f5f5;
  color: #333;
  padding: 20rpx 50rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.btn-confirm {
  background: #07c160;
  color: white;
  padding: 20rpx 50rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.dialog-policy {
  font-size: 24rpx;
  color: #888;
  display: flex;
  justify-content: center;
  align-items: center;
}


/* 底部说明/版权信息 固定在底部 */
.footer-text {
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  padding: 24rpx 0rpx;
  background-color: #ffffff;
  font-size: 22rpx;
  color: #999;
  text-align: center;
  box-shadow: 0 -1rpx 4rpx rgba(0,0,0,0.05);
}

