<!-- index.wxml -->
<view class="page">
  <!-- 页面标题 -->
  <view class="title">智能AI聊天助手</view>

  <!-- 卡片介绍区域 -->
  <view class="card">
    <!-- 卡片标题 -->
    <view class="card-title">欢迎体验</view>
    <!-- 卡片描述 -->
    <view class="card-desc">
      探索人工智能对话的无限可能，体验便捷健康助手带来的全新服务！
    </view>
    <!-- 进入 AI 对话按钮 -->
    <button class="primary-btn" bindtap="goToChat" style="position: relative; left: 0rpx; top: 2rpx">进入 AI 对话</button>
  </view>

  <!-- 授权弹窗 -->
  <view wx:if="{{showAuthDialog}}" class="dialog-wrapper">
    <view class="dialog-box">
      <view class="dialog-title">
        {{appName}} 申请
      </view>
      <view class="dialog-text">
        获取你的头像昵称<br />用于注册社区服务用户
      </view>
      <view class="dialog-buttons">
        <button class="btn-cancel" bindtap="onReject">拒绝</button>
        <button class="btn-confirm" open-type="getUserProfile" bindtap="getUserProfile">允许</button>
      </view>
      <view class="dialog-policy">
        <checkbox-group bindchange="onCheckAgree">
          <label>
            <checkbox value="agree" /> 我已阅读并同意《隐私政策》</label>
        </checkbox-group>
      </view>
    </view>
  </view>

  <!-- 底部版权信息 -->
  <view class="footer-text">© 2025 你的小程序名称</view>
</view>
