/* 聊天容器：预留输入框高度 */
.chat-container {
  width: 100%;
  height: calc(100vh - 50px); /* 输入框高度 */
  padding: 10px;
  background-color: #f5f5f5;
  box-sizing: border-box;
  overflow-y: scroll;
}

/* 每条消息项：采用 Flex 布局实现头像与消息内容排列 */
.message-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 10px;
}

/* 用户消息：头像在右侧，消息内容右对齐 */
.user-message {
  flex-direction: row-reverse;
}

/* 头像样式 */
.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin: 0 10px;
}

/* 消息内容区域 */
.message-content {
  max-width: 70%;
  padding: 8px 12px;
  border-radius: 15px;
  font-size: 15px;
  line-height: 2.0;
  word-wrap: break-word;
}

/* 用户消息气泡：蓝底白字 */
.user-message .message-content {
  background-color: #0084ff;
  color: #fff;
}

/* AI 消息气泡：灰底黑字 */
.ai-message .message-content {
  background-color: #f7d9a1;
  color: #000;
}

/* rich-text 内部样式（如有需要可调整） */
rich-text {
  display: block;
  font-size: 15px;
  line-height: 1.7;
}

/* 输入区域：固定在页面底部 */
.input-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 5px 10px;
  border-top: 1px solid #ddd;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
}

/* 输入框样式 */
.input-box {
  flex: 1;/*表示该元素可以扩展填充剩余的空间，使输入框自动占据除了发送按钮之外的全部可用空间*/
  height: 50px;
  padding: 0 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  font-size: 17px;
  color: #333;
}

