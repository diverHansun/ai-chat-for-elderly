/* 整体聊天容器 */
.chat-container {
  display: flex;
  flex-direction: column;
  padding: 10px;
  /* 预留底部空间，避免消息被输入框遮住 */
  padding-bottom: 80px;
}

/* 单条消息容器 */
.message {
  display: flex;
  align-items: center;
  margin: 10px 0;
}

/* 用户消息：右侧对齐 */
.message.user {
  justify-content: flex-end;
}

/* AI 消息：左侧对齐（可不写，默认居左） */
.message.ai {
  justify-content: flex-start;
}

/* 头像样式 */
.message .avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 10px; /* AI: 头像在左，文本在右 */
}

/* 覆盖用户头像的间距，使头像在最右侧 */
.message.user .avatar {
  margin-right: 0;     /* 取消默认右边距 */
  margin-left: 10px;   /* 在文本和头像之间留空 */
}

/* 消息文本样式 */
.message .text {
  max-width: 70%;
  padding: 10px;
  border-radius: 10px;
  word-wrap: break-word; /* 避免文本超出 */
}

/* 用户消息背景色 */
.message.user .text {
  background-color: #e0f7fa;
}

/* AI 消息背景色 */
.message.ai .text {
  background-color: #fff3e0;
}

/* 输入区域固定在底部 */
.input-area {
  display: flex;
  align-items: center;
  padding: 10px;
  border-top: 1px solid #ddd;
  position: fixed;  /* 关键：固定定位 */
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
}

/* 输入框样式 */
.input-area input {
  flex: 1;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
}

/* 发送按钮样式 */
.input-area button {
  padding: 10px 20px;
  margin-left: 10px;
  background-color: #0084ff;
  color: #fff;
  border: none;
  border-radius: 5px;
}
