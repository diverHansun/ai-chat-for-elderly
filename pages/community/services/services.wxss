/* 容器 */


/* 每一行表单 */
.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

/* 左侧标签 */
.label {
  width: 160rpx;
  font-size: 28rpx;
  color: #333;
}

/* 文本输入框 */
.input {
  flex: 1;
  height: 64rpx;
  padding: 0 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

/* 下拉和日期/时间显示 */
.picker {
  flex: 1;
  height: 64rpx;
  line-height: 64rpx;
  padding: 0 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #007aff;
  color: #fff;
  text-align: center;
  font-size: 32rpx;
  border-radius: 8rpx;
  margin-top: 40rpx;
}

/* 我的预约 容器 */
.my-reservations {
  margin-top: 50rpx;
}

/* 标题 */
.list-header {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

/* 每条记录 */
.reservation-item {
  background-color: #fff;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

/* 标签加点提示色 */
.item-label {
  color: #007aff;
}

/* 无记录提示 */
.empty {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  margin-top: 40rpx;
}
